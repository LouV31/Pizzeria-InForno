@model IEnumerable<Pizzeria_InForno.Models.Ingredienti>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex">
<p>
    <a asp-action="Create">Create New</a>
</p>
    <p>
        <a asp-action="Index" asp-controller="Articoli">Torna alla gesione Articoli</a>
    </p>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeIngrediente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezzo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeIngrediente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezzo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdIngrediente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdIngrediente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdIngrediente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
