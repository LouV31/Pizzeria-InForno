@model IEnumerable<Pizzeria_InForno.Models.Articoli>

@{
    ViewData["Title"] = "Index";
}


<h1 class="myTextColor mb-3">Articoli</h1>

<div class="d-flex">
<p>
    <a asp-action="Create" class="btn btn-sm btn-success me-3">Nuovo Prodotto</a>
</p>
    <p>
        <a asp-action="Index" asp-controller="Ingredienti" class="btn btn-sm btn-warning me-3">Gestione ingredienti</a>
    </p>
    <p>
        <a asp-action="Index" asp-controller="Ordine" class="btn btn-sm btn-warning me-3">Gestione ordini</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeArticolo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descrizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezzo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Immagine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoConsegna)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Ingredienti)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeArticolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descrizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Immagine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoConsegna)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.Ingredienti)
            </td> *@
            <td>
                <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.IdArticolo">Edit</a> 
                <a class="btn btn-sm btn-warning" asp-action="Details" asp-route-id="@item.IdArticolo">Details</a> 
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdArticolo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
