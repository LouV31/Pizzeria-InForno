@model Pizzeria_InForno.Models.Ordini


<div class="container">
    <h1 class="myTextColor mt-3">Dettagli dell Ordine @Model.IdOrdine</h1>
    <div class="row mt-5">
        <div class="col-6">
            <h3 class="myTextColor mt-2">L'ordine @Model.IdOrdine contiene i seguenti prodotti'</h3>
            @foreach(var articolo in Model.DettagliOrdine)
            {
                <div class="col mb-3">
                    <div class="d-flex align-items-center justify-content-between myBorder p-2">
                        <div class="imgContainer">
                            <img src="@articolo.Articoli.Immagine" alt="@articolo.Articoli.NomeArticolo" class="card-img-top myImgPizza"/>
                        </div>
                        <p class="mb-0">Quantità: @articolo.Quantita</p>
                        <p class="mb-0">Prezzo: @articolo.Articoli.Prezzo</p>
                    </div>
                </div>    
            }
        </div>
    </div>
</div>
