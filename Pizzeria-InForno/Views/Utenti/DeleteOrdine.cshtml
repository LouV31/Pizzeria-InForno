@model Pizzeria_InForno.Models.Ordini

<div class="container">
    <div class="row">
        <div class="col-6">
            <h3>Sicuro di voler procedere con l'eliminazione dell'ordine numero: @Model.IdOrdine?</h3>

            <div class="card">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title">Ordine N°: @Model.IdOrdine</h5>
                        <p class="card-text">Indirizzo di Spedizione: @Model.IndirizzoSpedizione</p>
                        @* <p class="card-text">Data Ordine: @Model.DataOrdine</p> *@
                        <p class="card-text">Prezzo Totale: @Model.Totale</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <form asp-action="DeleteOrdine" asp-controller="Utenti" asp-route-idOrdine="@Model.IdOrdine" method="post">
                            <button type="submit" class="btn btn-danger">Elimina</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

