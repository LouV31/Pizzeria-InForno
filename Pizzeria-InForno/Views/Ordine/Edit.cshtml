@model Pizzeria_InForno.Models.Ordini

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ordini</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdOrdine" />
            <div class="form-group">
                <label asp-for="IdUtente" class="control-label"></label>
                <select readonly asp-for="IdUtente" class="form-control" >
                    <option value="@ViewBag.Utente.Value">@ViewBag.Utente.Text</option>
                </select>
                <span asp-validation-for="IdUtente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndirizzoSpedizione" class="control-label"></label>
                <input asp-for="IndirizzoSpedizione" class="form-control" />
                <span asp-validation-for="IndirizzoSpedizione" class="text-danger"></span>
            </div>
                <div class="form-group">
                <label asp-for="DataOrdine" class="control-label"></label>
                <input asp-for="DataOrdine" class="form-control" />
                <span asp-validation-for="DataOrdine" class="text-danger"></span>
                </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsConsegnato" /> @Html.DisplayNameFor(model => model.IsConsegnato)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Totale" class="control-label"></label>
                <input asp-for="Totale" class="form-control" />
                <span asp-validation-for="Totale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

